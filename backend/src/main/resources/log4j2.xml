<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
    </Properties>
    <Appenders>
    	<!-- Console appender -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%clr{%d{HH:mm:ss.SSS}} %clr{%-5p} %clr{%-35c{1}} â€“ %m%n"/>
        </Console>
       <!-- Rolling File Appender -->
		<RollingFile name="FileAppender" fileName="logs/marugoto.log" 
		             filePattern="logs/backend-%d{yyyy-MM-dd}-%i.log">
		    <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p - [%15.15t] %-40.40c{1.} : %m%n%ex"/>
		    <Policies>
		        <SizeBasedTriggeringPolicy size="10MB" />
		    </Policies>
		    <DefaultRolloverStrategy max="10"/>
		</RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="ConsoleAppender" />
    		<AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
